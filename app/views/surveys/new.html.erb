<!-- app/views/surveys/new.html.erb -->
<%= form_with(model: @survey, local: true) do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="actions">
    <%= form.submit 'Create Survey' %>
  </div>
<% end %>
